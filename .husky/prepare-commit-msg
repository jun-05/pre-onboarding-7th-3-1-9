#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

FILE=$1
MESSAGE=$(cat $FILE)

if [[ $MESSAGE == "feat"* ]];
then
  echo "â­ $MESSAGE" >$FILE
elif [[ $MESSAGE == "fix"* ]];
then
  echo "ðŸ›  $MESSAGE" >$FILE
elif [[ $MESSAGE == "build"* ]];
then
  echo "ðŸ§± $MESSAGE" >$FILE
elif [[ $MESSAGE == "chore"* ]];
then
  echo "ðŸ‘ $MESSAGE" >$FILE
elif [[ $MESSAGE == "refactor"* ]];
then
  echo "âš’ $MESSAGE" >$FILE
elif [[ $MESSAGE == "ui"* ]];
then
  echo "ðŸŽ¨ $MESSAGE" >$FILE
elif [[ $MESSAGE == "docs"* ]];
then
  echo "âœ $MESSAGE" >$FILE
elif [[ $MESSAGE == "ci"* ]];
then
  echo "ðŸ’¡ $MESSAGE" >$FILE
elif [[ $MESSAGE == "style"* ]];
then
  echo "ðŸ“ $MESSAGE" >$FILE
else
  echo "$MESSAGE" >$FILE
fi